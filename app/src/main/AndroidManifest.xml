<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.iamagamedev.trainingapp">

    <application
        android:name=".app.ThisApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.exercises.ExerciseChoiceActivity"
            android:parentActivityName=".ui.thisTraining.ThisTrainingActivity">
        </activity>

        <activity
            android:name=".ui.story.StoryActivity"
            android:parentActivityName=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.training.TrainingActivity"
            android:parentActivityName=".ui.main.MainActivity">
        </activity>

        <activity android:name=".ui.achievements.AchievementsActivity">
        </activity>
        <activity android:name=".ui.statistics.StatisticsActivity">
        </activity>
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.thisTraining.ThisTrainingActivity"
            android:parentActivityName=".ui.training.TrainingActivity">
        </activity>
        <activity android:name=".ui.createNewExercise.CreateNewExerciseActivity">
        </activity>
    </application>

</manifest>